  <div class="SIGNUPtitle">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kranky&family=Yellowtail&display=swap" rel="stylesheet">
    <h2>SIGN UP</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <h2><%= f.label :name %></h2>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <br>
  <div class="box-image">
    <h2><%= f.label :image,"PROFILE IMAGE" %></h2>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="field">
    <h2><%= f.label :email %><br /></h2>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field">
    <h2><%= f.label :password %><h2>
    <% if @minimum_password_length %>
    <h3><em>(<%= @minimum_password_length %> characters minimum)</em><h3>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field">
    <h2><%= f.label :password_confirmation %><h2>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
